extends ./layout/index

block contenido 
  main.container.mt-5   
    h1.text-center.mt-5 #{pagina}
    blockquote.text-center Lee sobre nuestros Clientes y sus experiencias
    include ./layout/bloque.testimoniales.pug

    .col 
      .col-md-12
        h2.d-block.w-100.col.text-center.mt-4 Agrega un testimonio
        if(errores)
          each error in errores 
            .alert.col.alert-danger.text-center #{error.mensaje}

      .row.justify-content-center.col
        .col-md-8   
          form(action="/testimonios" method='POST')
            .form-group
              label(for="nombre") Nombre 
              input#nombre(type="text", placeholder='Ingresa tu nombre', name='nombre', class='form-control',value=nombre) 
            .form-group
              label(for="correo") Correo 
              input#correo(type="text", placeholder='Ingresa tu correo', name='correo', class='form-control', value=correo) 
            .form-group
              label(for="mensaje") Mensaje 
              textarea#mensaje(placeholder='Ingresa tu mensaje', name='mensaje', class='form-control', rows='3', cols="30")= mensaje
            input(type="submit").btn.btn-success.btn-block
            